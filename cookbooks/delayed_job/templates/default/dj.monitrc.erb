<% (@num_workers || 1).times do |num| %>

check process <%= @worker_name %>_<%= num + 1 %> with pidfile <%= @pid_dir %>/<%= @worker_name %>.<%= num + 1 %>.pid
  start program = "/usr/bin/env RAILS_ENV=<%= @framework_env %> <%= @app_dir %>/script/delayed_job --identifier <%= num + 1 %> --pid-dir=<%= @pid_dir %> start" as uid <%= @user %> and gid <%= @user %> with timeout <%= @timeout %> seconds
  stop program =  "/usr/bin/env RAILS_ENV=<%= @framework_env %> <%= @app_dir %>/script/delayed_job --identifier <%= num + 1 %> --pid-dir=<%= @pid_dir %> stop" as uid <%= @user %> and gid <%= @user %> with timeout <%= @timeout %> seconds
  group <%= @app_name %>_delayed_jobs

<% end %>
